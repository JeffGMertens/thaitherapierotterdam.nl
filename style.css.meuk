body {
  margin: 0;
  font-family: Arial, sans-serif;
  line-height: 1.6;
}

/* Header */
header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 1000;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

nav ul {
  list-style: none;
  display: flex;
  justify-content: center;
  margin: 0;
  padding: 1rem;
}

nav ul li {
  margin: 0 15px;
}

nav ul li a {
  text-decoration: none;
  color: #333;
  font-weight: bold;
}

/* General Sections */
section {
  background-color: #f8f5ff;
  padding: 20px 20px;
  max-width: 1200px;
  margin: auto;
}


